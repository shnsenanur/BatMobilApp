<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@color/colorPrimary">


 <EditText
     android:id="@+id/mail_etext"
     android:layout_width="204dp"
     android:layout_height="92dp"
     android:layout_alignParentBottom="true"
     android:layout_centerHorizontal="true"
     android:layout_marginTop="300dp"
     android:layout_marginBottom="400dp"
     android:hint="E-mailiniz giriniz"


     />

 <EditText
     android:id="@+id/password_etext"
     android:layout_width="213dp"
     android:layout_height="102dp"
     android:layout_alignParentBottom="true"
     android:layout_centerHorizontal="true"
     android:layout_marginTop="400dp"
     android:layout_marginBottom="309dp"
     android:hint="Şifrenizi giriniz"

     />

 <TextView

     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_centerHorizontal="true"
     android:layout_marginTop="40dp"
     android:layout_marginBottom="240dp"
     android:text="@string/app_name"
     android:textColor="@android:color/white"
     android:textSize="44sp"
     android:textStyle="bold" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:textColor="@android:color/black"
        android:text="@string/str_login"
        android:layout_marginTop="440dp"
        android:layout_marginBottom="130dp"
        android:id="@+id/login_btn"
        android:layout_alignParentBottom="true"
        />

    <Button
        android:id="@+id/newUser_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/login_btn"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="440dp"
        android:layout_marginBottom="75dp"
        android:background="@android:color/white"
        android:text="@string/str_newLogin"
        android:textColor="@android:color/black" />
    <Button
        android:id="@+id/travel_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/login_btn"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="440dp"
        android:layout_marginBottom="20dp"
        android:background="@android:color/white"
        android:text="BİRİNE BAKIP ÇIKACAĞIM"
        android:textColor="@android:color/black" />


</RelativeLayout>